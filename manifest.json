{
    "manifest_version": 2,
    "name": "URL Prefix Appender",
    "version": "1.0",
    "description": "Appends a prefix URL to the current tab's URL",
    "permissions": ["activeTab", "storage"],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }